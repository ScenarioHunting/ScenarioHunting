{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist2",
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2019",
      "dom",
      "esnext"
    ],
    "paths": {
      "*": [
        "src/@types"
      ]
    },
    "files": [
      "@types/monaco.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "@types/miro.d.ts",
    "@types/monaco.d.ts"
  ]
}