{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist2",
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "es2019",
      "dom",
      "esnext"
    ],
    "paths":{
      "*":["src/@types"]
    }
  },
  "include": [
    "src/**/*",
    "@types/miro.d.ts",
    "@types/monaco.d.ts",
    "app.config.ts"
  ],
  "files": [
    "@types/miro.d.ts",
    "./node_modules/@types",
    "./node_modules/@mirohq",
    "@types/monaco.d.ts",
  ]
}