{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "dist2",
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths":{
      "*":["src/@types"]
    }
  },
  "include": [
    "src/**/*",
    "@types/monaco.d.ts",
    "app.config.ts"
        ,"node_modules/@types",

         "node_modules/@mirohq",
         "src/**/*.spec.ts"

  ],
  "files": [

         "node_modules/@mirohq/websdk-types/index.d.ts",
    "@types/monaco.d.ts",
    "src/app/scenario-builder/step-picker/array-property-component.tsx",
    "src/app/scenario-builder/step-picker/singular-property-component.tsx",
    "src/app/scenario-builder/step-picker/property-component.tsx",
    
  ],
  "typeRoots": [
        "./node_modules/@types",
         "./node_modules/@mirohq"
       ],
       "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
    
}