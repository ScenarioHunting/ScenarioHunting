{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist2",
    "strictNullChecks": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "es2019",
      "dom",
      "esnext"
    ],
    "paths":{
      "*":["src/@types"]
    }
  },
  "include": [
    "src/**/*",
    "@types/monaco.d.ts",
    "app.config.ts"
        ,"node_modules/@types",
         "node_modules/@mirohq"
  ],
  "files": [

         "node_modules/@mirohq/websdk-types/index.d.ts",
    "@types/monaco.d.ts",
    "src/app/scenario-builder/step-picker/array-property-component.tsx",
    "src/app/scenario-builder/step-picker/singular-property-component.tsx",
    "src/app/scenario-builder/step-picker/property-component.tsx",
    
  ],
  "typeRoots": [
        "./node_modules/@types",
         "./node_modules/@mirohq"
       ]
}